# =============================================================================
# EXEMPLE DE FICHIER .ENV POUR MVP STICKY NOTES
# =============================================================================
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins
# =============================================================================

# Configuration Flask
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_SECRET_KEY=changez-cette-cle-secrete-en-production
JWT_SECRET_KEY=changez-cette-cle-jwt-en-production
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=true

# Configuration Base de données PostgreSQL
DATABASE_URL=postgresql+psycopg2://app:app@db:5432/appdb
DB_HOST=db
DB_PORT=5432
DB_NAME=appdb
DB_USER=app
DB_PASSWORD=app

# Variables PostgreSQL pour Docker
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=appdb

# Configuration développement
SQLALCHEMY_TRACK_MODIFICATIONS=false
LOG_LEVEL=DEBUG
TZ=Europe/Paris
ADMINER_PORT=8081